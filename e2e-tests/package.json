{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for cloud-native microservices system",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:checkout": "playwright test tests/checkout-flow.spec.ts",
    "test:user-journey": "playwright test tests/user-journey.spec.ts",
    "test:admin": "playwright test tests/admin-operations.spec.ts",
    "report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:3000"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
